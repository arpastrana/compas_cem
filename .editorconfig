# http://editorconfig.org

root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8

[*.bat]
indent_style = tab
end_of_line = crlf

[*.{md,diff,patch}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[LICENSE]
insert_final_newline = false
